{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":assignAndReview(helbing)",
    ":automergePatch",
    ":automergeMinor",
    ":labels(dependencies)",
    ":prHourlyLimit4"
  ],
  "automergeSchedule": [
    "after 10am",
    "before 6pm"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "schedule": [
        "every thursday"
      ]
    },
    {
      "groupName": "Fixed Construct @types/node version",
      "matchFiles": ["packages/construct/package.json"],
      "matchPackageNames": ["@types/node"],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "AWS CDK",
      "groupSlug": "awscdk",
      "matchFiles": ["packages/construct/package.json"],
      "matchPackageNames": [
        "aws-cdk-lib"
      ],
      "matchPackagePrefixes": [
        "@aws-cdk/"
      ],
      "ignoreUnstable": false
    }
  ]
}
