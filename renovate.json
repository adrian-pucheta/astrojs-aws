{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base", ":dependencyDashboard"
  ],
  "assignees": ["helbing"],
  "addLabels": [
    "renovate:bot"
  ],
  "automerge": true,
  "automergeSchedule": [
    "after 10am and before 6pm every day"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "schedule": [
        "every thursday"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": [
        "at any time"
      ]
    },
    {
      "groupName": "Fixed Construct @types/node version",
      "matchPaths": ["packages/construct/"],
      "matchDepNames": ["@types/node"],
      "allowedVersions": "18.11.9"
    },
    {
      "groupName": "AWS CDK",
      "groupSlug": "awscdk",
      "matchPaths": ["packages/construct/"],
      "matchPackagePatterns": ["^@aws-cdk/aws-", "aws-cdk-lib"]
    }
  ]
}
